@using System.Data
@model DataTable
<style>
    /*.ui.selection.dropdown {
        padding: 0;
    }*/
    #modalLoadCourses {
        height: 80vh;
    }
</style>
<h3 style="color: #41B9E6; text-align: center;">
    IZAJE DE CARGAS | EQUIPOS DE IZAJE | EDITAR CATEGORÍAS
</h3>

@using (Ajax.BeginForm("ProcessEditCategoriaIzage", "FactoresIzaje", FormMethod.Post, new AjaxOptions()
{
    HttpMethod = "POST",
    OnBegin = "return onBeginProcessEdit()",
    OnSuccess = "onSuccessProcessEdit(data)",
    OnFailure = "onFailureProcessEdit()",
}, new { @id = "formProcessEdit", @enctype = "multipart/form-data" }))
{
    <div class="ui equal width form">
        <div class="field">
            <input type="hidden" name="ID" value="@Model.Rows[0]["Id"].ToString()" />
        </div>
        <div class="fields">
            <div class="field">
                <label>Tipo equipo</label>
                @Html.DropDownList("cbxTipoEquipo", (SelectList)ViewBag.GetTipoEquipoDictionary, "[-Seleccione una opción-]", new { @class = "ui search dropdown" })
            </div>
            <div class="field">
                <label>Categoría</label>
                <input type="text" id="txbCategoria" name="txbCategoria" value="@Model.Rows[0]["Nombre"].ToString()" placeholder="Digite Categoria" autocomplete="off" maxlength="50">
            </div>
        </div>
        <button class="ui primary button" id="btnGuardar">
            Guardar
        </button>
        <div class="ui floating warning message" style="width:50%;margin-left:25%;margin-right:25%;text-align:center" id="messageEditCategoria">
            <div class="header">
                Atención
            </div>
            <p id="textmessageEditCategoria"></p>
        </div>
    </div>
}
<br />
<script type="text/javascript">
    $('#messageEditCategoria').hide();

    $('#formProcessEdit').form({
        fields: {
            cbxHeadquarter: {
                identifier: 'cbxHeadquarter',
                rules: [
                    {
                        type: 'empty',
                        prompt: 'Debe elegir un valor'
                    },
                ]
            },
        }, inline: true,
        on: 'blur'
    });
    $('#btnGuardar').on('click', function () {
        $('#formProcessEdit').submit();
        $('#textmessageEditCategoria').text("Proceso Completado");

    });

    function onBeginProcessEdit() {
        $('#renderPages').addClass("loading");
        return true;
    }

    function onFailureProcessEdit() {
        $('#renderPages').removeClass("loading");
        $('#messageEditCategoria').show('slow').addClass("warning").removeClass("info");
        $('#textmessageEditCategoria').text("Ha ocurrido un error al procesar la solicitud");
    }

    function onSuccessProcessEdit(data) {
        $('#renderPages').removeClass("loading");
        if (data.result) {
            $('#messageEditCategoria').show('slow').removeClass("warning").addClass("info");
            $('#textmessageEditCategoria').text("Proceso Completado");
        } else {
            $('#messageEditCategoria').show('slow').addClass("warning").removeClass("info");
            $('#textmessageEditCategoria').text(data.message);
        }
    }
</script>
