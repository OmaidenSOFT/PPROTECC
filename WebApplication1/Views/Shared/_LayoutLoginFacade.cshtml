    </div>-->

    @Scripts.Render("~/bundles/jqueryJs")
    @Scripts.Render("~/bundles/semanticJs")
    @Scripts.Render("~/Content/LoadingOverlay/src/loadingoverlay.min.js")
    @Scripts.Render("~/bundles/jqueryUnobstriveJs")
    @RenderSection("scripts", required: false)
<script type="text/javascript">
        function alturas() {
             var link = '@Url.Action("Index", "Home", new { modulo = "WH" })';
        location.href = link;
        }
    function izage() {
        var link = '@Url.Action("Index", "Home", new { modulo = "IC" })';
        location.href = link;
        }
</script>
</body>
</html>
