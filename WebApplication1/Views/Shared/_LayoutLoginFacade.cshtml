
@using WebApplication1.Models;
@{
    var session = Session["SessionUser"] as SessionModels;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Grupo Enel - Programa de protección contra caídas</title>
    @Styles.Render("~/Content/SemanticUi/semantic.css")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/font-awesome-4.7.0/css/font-awesome.css")
    <link href="~/Content/facade.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('@Url.Content("~/Content/Images/02-Pantalla-ingreso-A.jpg")');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="ui very text container segment" id="segmentLogin" style="margin-top:0%;height:160px">
        <img class="ui centered medium image" src="@Url.Content("~/Content/Images/Logo.png")">
        <h2 style="text-align:center" id="titulo1" class="ui teal header">PPROTECC 2.0</h2>



    </div>
    <div class="main" id="facade">
        <div class="container" style="margin-top:-1%">
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/alturas.jpg" alt="card__image" class="card__image" width="600">
                </div>
                <div class="card__body">
                    <span class="tag tag-blue">
                        <h2 onclick="alturas()" style="text-align:center" id="titulo1" class="ui teal header">@session.Modulos.Split('|')[0].ToUpper()</h2>
                    </span>
                      <h4>@session.Subtitulos.Split('|')[0]</h4>
                    
                </div>
                <div class="card__footer">
                    <div class="user">
                        <img src="~/Content/Images/tr_alturas.jpg" alt="user__image" class="user__image">
                        <div class="user__info">
                            <h5>@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/Izage.jpg" alt="card__image" class="card__image" width="600">
                </div>
                <div class="card__body">
                    <span class="tag tag-brown"><h2 onclick="izage()" style="text-align:center" id="titulo1" class="ui teal header">@session.Modulos.Split('|')[1].ToUpper()</h2></span>
                    <h4>@session.Subtitulos.Split('|')[1]</h4>
                   
                </div>
                <div class="card__footer">
                    <div class="user">
                        <img src="~/Content/Izage.jpg" alt="user__image" class="user__image">
                        <div class="user__info">
                            <h5>@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/espacios.jpg" alt="card__image" class="card__image" width="600">
                </div>
                <div class="card__body">
                    <span class="tag tag-blue"><h2 style="text-align:center" id="titulo1" class="ui teal header">@session.Modulos.Split('|')[2].ToUpper()</h2></span>
                    <h4>@session.Subtitulos.Split('|')[2]</h4>
                   
                </div>
                <div class="card__footer">
                    <div class="user">
                        <img src="~/Content/Images/tr-espacio.jpg" alt="user__image" class="user__image">
                        <div class="user__info">
                            <h5>@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/riesgoelectrico.png" alt="card__image" class="card__image" width="600">
                </div>
                <div class="card__body">
                    <span class="tag tag-blue"><h2 style="text-align:center" id="titulo1" class="ui teal header">@session.Modulos.Split('|')[3].ToUpper()</h2></span>
                    <h4>@session.Subtitulos.Split('|')[3]</h4>
                   
                </div>
                <div class="card__footer">
                    <div class="user">
                        <img src="~/Content/Images/tr-riesgoe.jpg" alt="user__image" class="user__image">
                        <div class="user__info">
                            <h5>@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/rxtintores.jpg" alt="card__image" class="card__image" width="600">
                </div>
                <div class="card__body">
                    <span class="tag tag-blue"><h2 style="text-align:center" id="titulo1" class="ui teal header">@session.Modulos.Split('|')[4].ToUpper()</h2></span>
                    <h4>@session.Subtitulos.Split('|')[4]</h4>
                   
                </div>
                <div class="card__footer">
                    <div class="user">
                        <img src="~/Content/Images/tr-extintores.jpg" alt="user__image" class="user__image">
                        <div class="user__info">
                            <h5>@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()
