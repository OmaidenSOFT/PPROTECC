
@using WebApplication1.Models;
@{
    var session = Session["SessionUser"] as SessionModels;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Grupo Enel - Programa de protección contra caídas</title>
    @Styles.Render("~/Content/SemanticUi/semantic.css")
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/font-awesome-4.7.0/css/font-awesome.css")
    <link href="~/Content/facade.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('@Url.Content("~/Content/Images/robotica-dighe_1200x630.jpeg")');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<body>
    <img class="ui centered image" src="@Url.Content("~/Content/Images/Logo.png")" style="border-radius: 0px 0px 20px 20px;width:18%">
    <div class="main" id="facade">
        <div class="container" style="margin-top:-6%">
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/Images/pprotecc2_trabajo.png" alt="card__image" class="card__image" width="600" style="margin-top:-3%">
                </div>
                <div class="card__body">
                    <img src="~/Content/Images/PPROTECC 2 ok_Boton altura.png"  onclick="alturas()" style="height:20%" />
                    <h4 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.Subtitulos.Split('|')[0]</h4>

                </div>
                <div class="card__footer">
                    <div class="user">

                        <img src="~/Content/Images/altura_pie.png" style="width: 49%;height: 91%;" />
                        <div class="user__info">
                            <h5 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/Images/pprotecc2_izage.png" alt="card__image" class="card__image" width="600" style="margin-top:-3%">
                </div>
                <div class="card__body">
                    <img src="~/Content/Images/PPROTECC 2 ok_boton izaje.png"onclick="izage()" style="height:24%" />
                    <h4 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.Subtitulos.Split('|')[1]</h4>
                </div>
                <div class="card__footer">
                    <div class="user">

                        <img src="~/Content/Images/izage_pie.png" style="width: 49%;height: 91%;"/>
                        <div class="user__info">
                            <h5 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/Images/pprotecc2_espacios.png" alt="card__image" class="card__image" width="600" style="margin-top:-3%">
                </div>
                <div class="card__body">
                    <img src="~/Content/Images/PPROTECC 2 ok_boton espacio confinado.png" style="height:40%" />
                    <h4 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.Subtitulos.Split('|')[2]</h4>

                </div>
                <div class="card__footer">
                    <div class="user">

                        <img src="~/Content/Images/espacios_pie.png" style="width: 49%;height: 91%;"/>
                        <div class="user__info">
                            <h5 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/Images/pprotecc2_riesgo.png" alt="card__image" class="card__image" width="600" style="margin-top:-3%">
                </div>
                <div class="card__body">

                    <img src="~/Content/Images/PPROTECC 2 ok_boton electrico.png" style="height:37%"/>

                    <h4 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.Subtitulos.Split('|')[3]</h4>

                </div>
                <div class="card__footer">
                    <div class="user">

                        <img src="~/Content/Images/riesgo_pie.png" style="width: 49%;height: 91%;"/>
                        <div class="user__info">
                            <h5 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card__header">
                    <img src="~/Content/Images/pprotecc2_extintor.png" alt="card__image" class="card__image" width="600" style="margin-top:-3%">
                </div>
                <div class="card__body">

                    <img src="~/Content/Images/PPROTECC 2 ok_boton extintor.png" style="height:37%"/>
                    <h4 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.Subtitulos.Split('|')[4]</h4>

                </div>
                <div class="card__footer">
                    <div class="user">
                        <img src="~/Content/Images/extintores_pie.png" style="width: 49%;height: 91%;" />
                        <div class="user__info">
                            <h5 style="font-family: RoobertENELGRE-Regular; text-transform: none !important;">@session.piedepaginacards.Split('|')[0]</h5>
                            <small>@session.piedepaginacards.Split('|')[1]</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()
    <!--<div class="ui very text container segment" id="segmentLogin" style="margin-top:0%;height:160px">-->
